{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:unicorn/recommended",
    "plugin:sonarjs/recommended",
    "airbnb-base",
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "jest",
    "promise",
    "unicorn",
    "sonarjs"
  ],
  "rules": {
    "import/extensions": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}