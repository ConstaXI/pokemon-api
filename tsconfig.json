{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "importHelpers": true,
    "outDir": "build",
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "sourceMap": true  
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "./*.js"
  ]
}
