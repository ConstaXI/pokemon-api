{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "importHelpers": true,
    "outDir": "build",
    "rootDir": ".",
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "test"
    ],
    "paths": {
      "@*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "./*.js"
  ]
}
